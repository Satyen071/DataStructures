package ImplementLinkedList;

import java.util.HashMap;

public class TestCountWords {

	public static void main(String[] args) {
		String str="a fox is clever than the cat and a cat is clever than the dog, jackal and goat.";
	     HashMap<String, Integer> res = new HashMap<String, Integer>();
	     str = str.replace(",", "");
	     String el [] = str.trim().split("\\s+");
	     for (String s : el) {
	    	 if(s.length()>=3) {
//	    		 s = s.replace(',', ' ');
	    		 int count = 0;
	    		 if (res.containsKey(s)) {
	             count = res.get(s);
	         	}
	         res.put(s, count + 1);
	    	 }
	     }
	     for (String keys : res.keySet()) {
	         System.out.printf("%s : %d%n", keys, res.get(keys));
	     }

	}

}
