package ImplementLinkedList;

import java.util.HashMap;

public class TestCountWords {

	public static void main(String[] args) {
		String str="a fox is clever than the cat and a cat is clever than the dog, jackal and goat.";
		char[] words = new char[str.length()];
		int space=0;
		for(int i=0;i<str.length()-1;i++) {
			if(str.charAt(i+1)==' '||str.charAt(i+1)==','||str.charAt(i+1)=='.')
				space++;
			words[i] = str.charAt(i);
			System.out.print(str.charAt(i));
		}
		for(int i=0;i<words.length;i++) {
			System.out.print(words[i]);
		}
